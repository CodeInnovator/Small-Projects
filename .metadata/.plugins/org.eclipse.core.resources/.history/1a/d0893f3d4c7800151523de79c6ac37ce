package numbers.JavaMegaProjectList.codeInnovator;
/**
 * 
 * @author CodeInnovator
 * 
 */
	
public class DecimalConverter {
/**
 * Binary to Decimal and Back Converter - 
 * 
 * Develop a converter to convert a decimal number to binary or a binary number to its decimal equivalent.
**/	
	
	
	public static String decimalConverter(int bin){
		int remainder =bin;
		double counter =1;
		String result = "";
		while(remainder / ((int) (Math.pow(2.0, counter))) != 0)
			counter += 1;
		
		while(counter != 0 && remainder != 0){
			counter -= 1;
			int div = (int) Math.pow(2, counter);
			
			if(remainder % div != 0 && remainder / div > 0){
				result += "1";
				remainder = remainder % div;
			} else if(remainder == 1 && counter == 0){
					result += "1";
			}	else {
				result += "0";
				
			}
		}
		
		
		return result;
	}
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub
				System.out.println(decimalConverter(7));
	}

	
	
}
